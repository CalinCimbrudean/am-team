@model IEnumerable<TheAMTeam.Business.Models.ArticleBussinessModel>
@{

    Layout = "/Views/Shared/_LayoutArticle.cshtml";
}


<h2>Article</h2>
@using (Html.BeginForm("getAll", "Article", FormMethod.Post))
{
    <input type="text" placeholder="Search here..." name="search" />
    <br>
    <input type="submit" value="Search" />
}

@if (ViewBag.NotFound != null)
{
    <h2>@ViewBag.NotFound</h2>
}
else
{
    <table style="display:block; height:300px; overflow:auto;">
        <thead>
            <tr>
                <th>Title </th>
                <th>Author </th>
                <th>Published Date </th>
                <th>Content</th>
                <th>Image URL</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var article in Model)
            {
                <tr>
                    <td>
                        @article.Title
                    </td>
                    <td>
                        @article.Author
                    </td>
                    <td>
                        @article.PublishedDate
                    </td>
                    <td>
                        @article.Content
                    </td>
                    <td>
                        @article.ImageURL
                    </td>
                    <td>
                        @article.Category.Name
                    </td>
                    <th>
                        @Html.ActionLink("Edit", "Edit", "Article", new { id = article.ArticleId }, null)
                    </th>
                    <th>
                        @Html.ActionLink("Delete", "Delete", "Article", new { id = article.ArticleId }, null)
                    </th>
                </tr>
            }
        </tbody>
    </table>
}
























