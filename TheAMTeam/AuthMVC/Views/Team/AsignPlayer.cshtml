@model TheAMTeam.WebMVC.Models.PlayerAsignModel
@{
    ViewBag.Title = "Teams";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@using (Html.BeginForm("AsignPlayerPost", "Team", FormMethod.Post,new { @class = "form-group"}))
{
    @Html.HiddenFor(x => x.teamId)
    <br />
    <select class="form-control" id="playerId" name="playerId">
        @foreach (var player in Model.playerModels)
        {
            <option value="@player.PlayerId">@player.Name</option>
        }
    </select>
    <br />
    <input type="submit" value="Submit form" class="btn btn-default"/>
    <input type="button" value="Back" onclick="location.href='@Url.Action("GetAll", "Team")'" class="btn btn-default"/>
}